/[if (gt IE 9)|!(IE)] <!--> <html lang=\"en\">

%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"
  
  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "Tucson Elite Atheltics Club"

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tag

%body
  .container
    .row.navigation-area
      .six.columns
        = link_to root_path do
          = image_tag "logo.png"
      .two.columns.nav-links
        = link_to "About", "#", { :class => "nav-link" }
        = link_to "Coaches", coaches_path, { :class => "nav-link" }
        = link_to "Workouts", workouts_path, { :class => "nav-link" }
      .two.columns.nav-links
        = link_to "Blog", "#", { :class => "nav-link" }
        = link_to "Videos", "#", { :class => "nav-link" }
        = link_to "Calendar", "#", { :class => "nav-link" }
      .two.columns.nav-links
        - if request.env['PATH_INFO'] == root_path
          = link_to "Show our sponsors some love!", "#", { :class => "medium radius nice button", :id => "sponsor-love", :onclick => "goToByScroll('sponsors')" }

    = render "layouts/actions"
    = render "layouts/feedback"
    
    = yield
    
    .row
      .twelve.columns
        .panel#developer
          %p Developed by Michael Drogalis (mjd3089 at rit dot edu)
          %p A Ruby on Rails project
          = link_to "Administrators log in here.", new_user_session_path
