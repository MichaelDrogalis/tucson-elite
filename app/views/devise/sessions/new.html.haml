.row
  .twelve.columns
    .panel
      %h2 Sign in
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "nice" }) do |f|
        %div.form-field
          = f.label :email
          = f.email_field :email
        %div.form-field
          = f.label :password
          = f.password_field :password
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me
        %p
          %div= f.submit "Sign in", { :class => "nice radius button" }
      = render "links"
