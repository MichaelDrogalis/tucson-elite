.row
  .twelve.columns
    .panel
      %h2
        Edit #{resource_name.to_s.humanize}
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "nice", :method => :put }) do |f|
        = devise_error_messages!
        %div.form-field
          = f.label :first_name
          = f.text_field :first_name
        %div.form-field
          = f.label :last_name
          = f.text_field :last_name
        %div.form-field
          = f.label :email
          = f.email_field :email
        %div.form-field
          = f.label :password
          %i (leave blank if you don't want to change it)
          %br/
          = f.password_field :password
        %div.form-field
          = f.label :password_confirmation
          = f.password_field :password_confirmation
        %div.form-field
          = f.label :current_password
          %i (we need your current password to confirm your changes)
          %br/
          = f.password_field :current_password
        %p
          %div= f.submit "Update", { :class => "nice radius button" }
      %h3 Cancel my account
      %p
        = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, :class => "nice red radius button"
      = link_to "Back", :back
