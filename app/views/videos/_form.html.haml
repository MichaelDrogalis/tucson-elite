.row 
  .row
    .six.columns
      = form_for(@video, :html => { :class => "nice" }) do |f|
        -if @video.errors.any?
          #error_explanation
            %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
            %ul
              - @video.errors.full_messages.each do |msg|
                %li= msg
        
        .field.form-field
          = f.label :title
          = f.text_field :title
        .field.form-field
          = f.label :youtube_url
          = f.text_field :youtube_url
        .field.form-field
          = f.label :tag_list
          = f.text_field :tag_list
        .field.form-field
          = f.label :description
          = f.text_area :description
        .actions
          = f.submit 'Save', { :class => "nice green radius button" }
