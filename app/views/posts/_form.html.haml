.row
  .panel
    .row
      .six.columns
        = form_for(@post, :html => { :class => "nice" }) do |f|
          -if @post.errors.any?
            #error_explanation
              %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
              %ul
                - @post.errors.full_messages.each do |msg|
                  %li= msg
        
          .field.form-field
            = f.label :title
            = f.text_field :title
          .field.form-field
            = f.label "Post tags"
            %ul.post-tag-input
          .field.form-field
            = f.label :content
            = f.text_area :content, :id => "post-content-input"
          .actions
            = f.submit 'Save', { :class => "nice green radius button" }
      .six.columns
        %h3 Post Preview
        %hr
        #post-preview