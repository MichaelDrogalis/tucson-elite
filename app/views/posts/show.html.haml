.row
  .panel#post-container
    .row
      .twelve.columns
        %h2#post-title= @post.title
    .row
      .twelve.columns
        = format(@post.content)
        = tweet_button
        = facebook_like
        
        - if user_signed_in? 
          = link_to 'Edit', edit_post_path(@post)
          \|
          = link_to 'Back', posts_path

.row
  .twelve.columns
    .panel
      %h4 0 comments
      - @post_comments.each do |comment|
        = comment.content
      
      %hr
      = simple_form_for @comment do |f|
        = f.hidden_field :post_id, :value => @post.id
        = f.input :name
        = f.input :email
        = f.input :content
        = f.button :submit, { :class => "nice green radius" }

#toTop ^ Back to Top
