= form_for(@event, :html => { :class => "nice" }) do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field.form-field
    = f.label :name
    = f.text_field :name
  .field.form-field
    = f.label :event_when
    = f.datepicker :event_when
  .actions
    %p
      %p
        = f.submit 'Save', { :class => "nice green radius button" }
