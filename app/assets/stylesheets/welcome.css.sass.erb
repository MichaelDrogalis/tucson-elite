.navigation-area
  margin-top: 20px

.nav-link
  color: #333
  display: block
  font-size: 2.1em
  line-height: 1.25
  padding: 5px

  -o-transition: 0.2s
  -ms-transition: 0.2s
  -moz-transition: 0.2s
  -webkit-transition: 0.2s
  transition: 0.2s

  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px

.nav-link:hover
  background: rgba(0, 0, 0, 0.1)

#sponsors
  margin-bottom: 20px
  margin-top: 20px

.sponsor-logo
  display: block
  text-align: center

.slider-nav span
  display: none

#usa-tf-logo
  padding-bottom: 15px

#social-icons
  margin-bottom: 50px
  text-align: center

.social-icon
  margin: 10px

ul.orbit-bullets li
  background: url(<%= asset_path "orbit-bullet.png" %>) no-repeat 0 0
  width: 8px